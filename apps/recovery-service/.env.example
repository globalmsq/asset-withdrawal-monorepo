# Recovery Service Environment Configuration
# WARNING: These are example values for development/testing only
# Use secure values in production and never commit actual secrets to version control

# Server Configuration
PORT=3007
NODE_ENV=development

# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ENDPOINT=http://localhost:4566
# AWS_ACCESS_KEY_ID=your_access_key  # Optional for LocalStack
# AWS_SECRET_ACCESS_KEY=your_secret  # Optional for LocalStack

# DLQ URLs (Dead Letter Queues)
TX_REQUEST_DLQ_URL=http://localhost:4566/000000000000/tx-request-dlq
SIGNED_TX_DLQ_URL=http://localhost:4566/000000000000/signed-tx-dlq
BROADCAST_TX_DLQ_URL=http://localhost:4566/000000000000/broadcast-tx-dlq

# Original Queue URLs (for retry)
TX_REQUEST_QUEUE_URL=http://localhost:4566/000000000000/tx-request-queue
SIGNED_TX_QUEUE_URL=http://localhost:4566/000000000000/signed-tx-queue
BROADCAST_TX_QUEUE_URL=http://localhost:4566/000000000000/broadcast-tx-queue

# Retry Configuration
MAX_RETRY_ATTEMPTS=5
INITIAL_RETRY_DELAY_MS=60000          # 1 minute
MAX_RETRY_DELAY_MS=21600000          # 6 hours
RETRY_BACKOFF_MULTIPLIER=2.0

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=withdrawal_system
MYSQL_USER=root
MYSQL_PASSWORD=pass

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9097

# Logging Configuration
RECOVERY_SERVICE_LOG_LEVEL=info

# Recovery Configuration
RECOVERY_POLLING_INTERVAL=30000      # 30 seconds
RECOVERY_MAX_RETRY_ATTEMPTS=3
RECOVERY_BATCH_SIZE=5
ENABLE_DUMMY_TX=false
MAX_DUMMY_TX_PER_MINUTE=5