# Signing Service Configuration
NODE_ENV=development

# Security Configuration
SIGNING_SERVICE_ENCRYPTION_KEY=  # Must be exactly 32 characters (e.g., development-encryption-key-change-in-production-32)

# AWS Configuration
AWS_REGION=ap-northeast-2
AWS_ENDPOINT=                    # Optional: LocalStack endpoint (e.g., http://localhost:4566)
AWS_ACCESS_KEY_ID=               # Required for AWS services (use 'test' for LocalStack)
AWS_SECRET_ACCESS_KEY=           # Required for AWS services (use 'test' for LocalStack)

# AWS Secrets Manager
SIGNING_SERVICE_PRIVATE_KEY_SECRET=signing-service/private-key

# SQS Queue URLs
TX_REQUEST_QUEUE_URL=            # e.g., http://sqs.ap-northeast-2.localhost.localstack.cloud:4566/000000000000/tx-request-queue
SIGNED_TX_QUEUE_URL=             # e.g., http://sqs.ap-northeast-2.localhost.localstack.cloud:4566/000000000000/signed-tx-queue

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=withdrawal_system
MYSQL_USER=root
MYSQL_PASSWORD=your_password

# Redis Configuration (for nonce management)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging Configuration
SIGNING_SERVICE_LOG_LEVEL=info   # Options: error, warn, info, debug
SIGNING_SERVICE_AUDIT_LOG_PATH=./logs/audit.log

# Batch Processing Configuration
ENABLE_BATCH_PROCESSING=true     # Enable/disable batch transaction processing
MIN_BATCH_SIZE=5                 # Minimum number of transactions to batch
BATCH_THRESHOLD=3                # Threshold for creating a batch
MIN_GAS_SAVINGS_PERCENT=20       # Minimum gas savings percentage to justify batching
SINGLE_TX_GAS_ESTIMATE=65000     # Estimated gas for single transaction
BATCH_BASE_GAS=100000            # Base gas for batch transaction
BATCH_PER_TX_GAS=25000           # Additional gas per transaction in batch

# Batch Allowance Optimization
BATCH_ALLOWANCE_STRATEGY=multiplier  # Options: multiplier, fixed
BATCH_ALLOWANCE_MULTIPLIER=10        # Multiply required amount by this value (when strategy=multiplier)
BATCH_ALLOWANCE_AMOUNT=1000          # Fixed human-readable amount (when strategy=fixed, e.g., "1000", "0.5")

