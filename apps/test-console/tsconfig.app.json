{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "shared": ["../../packages/shared/dist/index"],
      "shared/*": ["../../packages/shared/dist/*"]
    }
  },
  "include": ["src/**/*.ts"]
}
