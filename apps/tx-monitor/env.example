# TX Monitor Service Environment Configuration
# WARNING: These are example values for development/testing only
# Use secure values in production and never commit actual secrets to version control
# Copy this file to .env and update with your values

# Service Configuration
NODE_ENV=development
PORT=3003
LOG_LEVEL=info
LOG_FORMAT=simple

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=withdrawal_system
MYSQL_USER=root
MYSQL_PASSWORD=pass

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Blockchain Configuration
# Override default WebSocket RPC URL from chains.config.json
# RPC_URL=ws://localhost:8545

# Monitoring Configuration
MONITORING_ENABLED=true
WEBSOCKET_ENABLED=true
POLLING_ENABLED=true

# Performance Configuration
MAX_CONCURRENT_RPC_CALLS=10
BATCH_SIZE=30
CACHE_SIZE=10000

# Health Check
# Used by health check endpoint and Docker healthcheck
HEALTH_CHECK_ENABLED=true