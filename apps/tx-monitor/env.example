# TX Monitor Service Configuration

# Service Configuration
PORT=3003
NODE_ENV=development

# Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=withdrawal_system
MYSQL_USER=root
MYSQL_PASSWORD=pass

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Monitoring Settings
MONITORING_ENABLED=true
WEBSOCKET_ENABLED=true
POLLING_ENABLED=true

# Performance Configuration
MAX_CONCURRENT_RPC_CALLS=10
BATCH_SIZE=30
CACHE_SIZE=10000

# Polling Intervals (milliseconds)
FAST_POLLING_INTERVAL=60000      # 1 minute
MEDIUM_POLLING_INTERVAL=600000    # 10 minutes
FULL_POLLING_INTERVAL=3600000     # 1 hour

# Transaction Confirmation Requirements
# These can be overridden per chain in chains.config.json
DEFAULT_CONFIRMATIONS=12
POLYGON_CONFIRMATIONS=30
ETHEREUM_CONFIRMATIONS=12

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# RPC Configuration (Optional - uses chains.config.json by default)
# RPC_URL=https://polygon.llamarpc.com
# FALLBACK_RPC_URL=https://polygon-rpc.com

# WebSocket Configuration (Optional)
# WS_URL=wss://polygon-bor.publicnode.com
# WS_RECONNECT_INTERVAL=5000
# WS_MAX_RECONNECT_ATTEMPTS=10

# Monitoring Metrics (Optional)
# METRICS_ENABLED=false
# METRICS_PORT=9090