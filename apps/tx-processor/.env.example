# Server Configuration
HOST=localhost
TX_PROCESSOR_PORT=3001

# Queue Configuration
AWS_REGION=ap-northeast-2
AWS_ENDPOINT=http://localhost:4566  # LocalStack endpoint (remove for AWS)
AWS_ACCESS_KEY_ID=test  # LocalStack default
AWS_SECRET_ACCESS_KEY=test  # LocalStack default

# Worker Configuration
VALIDATION_SIGNING_WORKER_ENABLED=true
TRANSACTION_SENDER_WORKER_ENABLED=true
WORKER_BATCH_SIZE=10
WORKER_INTERVAL=5000  # milliseconds

# Polygon Configuration
POLYGON_NETWORK=amoy  # Options: amoy, mainnet
POLYGON_RPC_URL=https://rpc-amoy.polygon.technology
POLYGON_CHAIN_ID=80002  # 80002 for Amoy, 137 for Mainnet
POLYGON_CONFIRMATIONS=3

# Database Configuration
DATABASE_URL=mysql://root:pass@localhost:3306/withdrawal_system

# Logging
LOG_LEVEL=debug  # Options: debug, info, warn, error