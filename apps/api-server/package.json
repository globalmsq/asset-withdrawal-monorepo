{
  "name": "api-server",
  "version": "1.0.0",
  "private": true,
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/main.ts",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docs:generate": "swagger-jsdoc -d ./src/swagger.ts -o ../../docs/api/openapi/openapi.json",
    "docs:validate": "npx @apidevtools/swagger-cli validate ../../docs/api/openapi/openapi.json",
    "docs:serve": "npx @redocly/openapi-cli preview-docs ../../docs/api/openapi/openapi.json"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "database": "workspace:*",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "shared": "workspace:*",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  }
}